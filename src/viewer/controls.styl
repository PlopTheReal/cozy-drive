.pho-viewer-controls
    display         flex
    flex-direction  row
    width           100%
    height          100%

    &--expanded
        flex-direction column

        .pho-viewer-nav
            position   fixed
            margin-top 0
            top        5.625rem
            bottom     0
            width      40%

        .pho-viewer-canceled
            height      100%
        .pho-viewer-nav + .pho-viewer-canceled
            margin-left 20%
    //!TODO Remove this code after upgrading to cozy-bar@6
    svg
        display: initial
        visibility: initial

.pho-viewer-nav
    margin-top           5.625rem
    z-index              $modal-index + 1
    width                20%
    cursor               pointer
    background-color     transparent
    transition           .4s opacity ease-out
    opacity              0
    display              flex
    align-items          center
    justify-content      center
    flex-direction       column

    .pho-viewer-nav-arrow
        height 4.375rem
        width  4.375rem
        border-radius       50%
        opacity             0.7
        background-color    charcoalGrey
        background-repeat   no-repeat
        background-position center center

    &--visible:hover
        opacity           1
        transition        none
    &--previous
        left 0
        .pho-viewer-nav-arrow
            align-self          flex-start
            margin-left         2.5rem
            background-image    embedurl('./assets/icon-arrow-left.svg')
    &--next
        right 0
        .pho-viewer-nav-arrow
            align-self          flex-end
            margin-right        2.5rem
            background-image    embedurl('./assets/icon-arrow-right.svg')


// TODO: we shouldn't do that
:local
    @extend $selectionbar

// here we force the action buttons to stay on the right
.coz-selection-bar
    justify-content flex-end

+medium-screen()
    .coz-selectionbar
        justify-content flex-end
        padding-right   0

.pho-viewer-toolbar
    position    fixed
    z-index     $modal-index + 1
    display     flex
    flex-shrink 0
    width       100%
    height      5.625rem
    transition .4s opacity ease-out
    background linear-gradient(to bottom, rgba(50, 54, 63, .5), rgba(50, 54, 63, .33), rgba(50, 54, 63, 0))
    pointer-events none // especially important for pdf viewers, where there might be additional controls in the top area

    &--mobilebrowser
        background-color charcoalGrey
        opacity 0.9

    &--hidden
        opacity 0

    .pho-viewer-toolbar-actions
        position          static
        z-index           0
        display           flex
        align-items       center
        justify-content   center
        width             100%
        height            auto
        background-color  transparent

        button
            pointer-events   initial
            color white

            &:hover
            &:focus
                color white


.pho-viewer-toolbar-close
    position         fixed
    top              0
    right            0
    display          flex
    align-items      center
    justify-content  center
    width            5.625rem
    height           5.625rem
    cursor           pointer
    pointer-events   initial


    button
        color white
        background-color transparent
        border 0

        &:hover
        &:focus
            background-color transparent


+medium-screen()
    .pho-viewer-toolbar
        height  3rem

        &::before
            width 3rem

    .pho-viewer-toolbar-close
        width   3rem
        height  3rem

    .pho-viewer-toolbar-close-cross
        margin auto

        &::after, &::before
            margin  .1rem .7rem
            height  1.125rem
